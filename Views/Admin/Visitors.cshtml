@model IEnumerable<FaceAttend.Models.VisitorLogRecord>
@{
    Layout = null;
    var list = (Model ?? Enumerable.Empty<FaceAttend.Models.VisitorLogRecord>()).ToList();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Visitors â€¢ FaceAttend Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/admin.css")" />
</head>
<body class="admin-bg text-white">
<div class="container py-4">

    <div class="d-flex flex-wrap gap-2 justify-content-between align-items-center mb-3">
        <div>
            <div class="h4 mb-0">Visitors</div>
            <div class="text-white-50">Total: @list.Count</div>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <a class="btn btn-outline-light" href="@Url.Action("Enrolled","Admin")">Enrolled</a>
            <a class="btn btn-outline-light" href="@Url.Action("ExportVisitorsJson","Admin")">Export JSON</a>
            <a class="btn btn-outline-light" href="/Kiosk/Index">Kiosk</a>
            @using (Html.BeginForm("Logout","Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <button class="btn btn-light" type="submit">Logout</button>
            }
        </div>
    </div>

    <div class="glass rounded-4 p-3">
        <div class="row g-2 align-items-center mb-3">
            <div class="col-md-6">
                <input id="qVisitors" class="form-control" placeholder="Search name / purpose / time..." />
            </div>
            <div class="col-md-6 text-md-end text-white-50 small">
                Source: App_Data/visitors.json
            </div>
        </div>

        <div class="table-responsive">
            <table id="tblVisitors" class="table table-dark table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Created (UTC)</th>
                        <th>Name</th>
                        <th>Purpose</th>
                        <th class="text-white-50">IP</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var v in list)
                {
                    <tr>
                        <td class="text-white-50">@v.CreatedUtc</td>
                        <td>@v.Name</td>
                        <td class="text-white-50">@v.Purpose</td>
                        <td class="text-white-50 mono">@v.ClientIp</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

</div>

<script src="@Url.Content("~/Scripts/jquery-3.7.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")"></script>
<script src="@Url.Content("~/Scripts/admin.js")"></script>
<script>
  FaceAttendAdmin.wireSearch("#qVisitors", "#tblVisitors");
</script>
</body>
</html>
