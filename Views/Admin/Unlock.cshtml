@{
    Layout = null;
    var returnUrl = (string)ViewBag.ReturnUrl ?? "/Admin/Enrolled";
    var err = (string)ViewBag.Error;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Admin Unlock â€¢ FaceAttend</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/vendor/sweetalert2/sweetalert2.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/admin.css")" />
</head>
<body class="admin-bg d-flex align-items-center justify-content-center p-3">

    <div class="glass rounded-4 p-4 text-white" style="width:min(420px, 100%);">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="fw-bold">FaceAttend Admin</div>
            <span class="badge text-bg-dark border border-light-subtle">LOCKED</span>
        </div>

        <div class="text-white-50 mb-3">Enter PIN to continue.</div>

        <form method="post" action="@Url.Action("Unlock","Admin")" autocomplete="off">
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@returnUrl" />

            <div class="mb-3">
                <label class="form-label text-white-50">PIN</label>
                <input class="form-control form-control-lg" type="password" name="pin" inputmode="numeric" required />
            </div>

            <button class="btn btn-light w-100" type="submit">Unlock</button>
        </form>

        <div class="text-white-50 mt-3 small">
            Tip: change Admin PIN in Web.config.
        </div>
    </div>

    <script src="@Url.Content("~/Scripts/jquery-3.7.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Scripts/vendor/sweetalert2/sweetalert2.min.js")"></script>

    <script>
      (function(){
        var err = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(err));
        if (err) {
          Swal.fire({ icon: "error", title: "Unlock failed", text: err });
        }
      })();
    </script>
</body>
</html>
