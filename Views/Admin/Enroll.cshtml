@{
    Layout = null;
    var employeeId = (string)ViewBag.EmployeeId ?? "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Enroll â€¢ FaceAttend Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/vendor/toastr/toastr.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/vendor/sweetalert2/sweetalert2.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/admin.css")" />

    <style>
        .cam-shell { position: relative; width: 100%; aspect-ratio: 16 / 9; overflow: hidden; border-radius: 18px; background: rgba(0,0,0,.35); }
        .cam-shell video { position:absolute; inset:0; width:100%; height:100%; object-fit:cover; transform: scaleX(-1); }
        .cam-shell canvas { display:none; }
        .center-guide { position:absolute; left:50%; top:50%; width:min(55vmin,340px); height:min(55vmin,340px); transform:translate(-50%,-50%); border-radius:28px; border:2px solid rgba(255,255,255,.18); box-shadow: 0 0 0 9999px rgba(0,0,0,.18) inset; }
        .facebox { position:absolute; display:none; border-radius:18px; border:2px solid rgba(50,205,50,.85); box-shadow: 0 0 24px rgba(50,205,50,.25); }
        .facebox.warn { border-color: rgba(255,193,7,.9); box-shadow: 0 0 24px rgba(255,193,7,.25); }
        .facebox.bad { border-color: rgba(220,53,69,.9); box-shadow: 0 0 24px rgba(220,53,69,.25); }

        .dot { display:inline-block; width:10px; height:10px; border-radius:50%; margin-right:8px; background: rgba(255,255,255,.35); }
        .dot.good { background: rgba(50,205,50,.9); }
        .dot.warn { background: rgba(255,193,7,.9); }
        .dot.bad { background: rgba(220,53,69,.9); }

        .mono { font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; }
    </style>
</head>

<body class="admin-bg text-white">
<div class="container py-4">

    <div class="d-flex flex-wrap gap-2 justify-content-between align-items-center mb-3">
        <div>
            <div class="h4 mb-0">Enrollment</div>
            <div class="text-white-50">Capture + liveness + save template</div>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <a class="btn btn-outline-light" href="@Url.Action("Enrolled","Admin")">Back</a>
            <a class="btn btn-outline-light" href="@Url.Action("Visitors","Admin")">Visitors</a>
            <a class="btn btn-outline-light" href="/Kiosk/Index">Kiosk</a>
        </div>
    </div>

    <div class="row g-3">
        <!-- Left: Controls + status -->
        <div class="col-lg-4">
            <div class="glass rounded-4 p-3 h-100">
                <div class="text-white-50 mb-2">Employee ID</div>

                <input id="empId"
                       class="form-control form-control-lg mono"
                       value="@employeeId"
                       placeholder="EMPLOYEE ID"
                       autocomplete="off"
                       style="text-transform:uppercase" />

                <div class="d-flex gap-2 mt-3">
                    <button id="btnStart" class="btn btn-light w-100" type="button">Start</button>
                    <button id="btnRedo" class="btn btn-outline-light w-100 d-none" type="button">Redo</button>
                </div>

                <hr class="border-light border-opacity-25 my-3" />

                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div id="aStatus" class="h5 mb-0">Idle</div>
                        <div id="aSub" class="text-white-50">Ready</div>
                    </div>
                    <span class="badge text-bg-dark border border-light-subtle">ADMIN</span>
                </div>

                <div class="mt-3">
                    <div class="text-white-50 small">Hints</div>
                    <div id="hintMsgA" class="mt-1">Center your face</div>
                    <div id="hintSubA" class="text-white-50">Hold still during scan</div>
                </div>

                <div class="mt-3 d-flex flex-wrap gap-2">
                    <div class="badge-pill glass px-3 py-2">
                        <span id="dotCamA" class="dot warn"></span> CAM
                    </div>
                    <div class="badge-pill glass px-3 py-2">
                        <span id="dotDlibA" class="dot warn"></span> DLIB
                    </div>
                    <div class="badge-pill glass px-3 py-2">
                        <span id="dotLivA" class="dot warn"></span> LIV
                    </div>
                    <div class="badge-pill glass px-3 py-2">
                        <span id="dotNetA" class="dot warn"></span> NET
                    </div>
                </div>

                <div class="text-white-50 small mt-3">
                    Tip: use good lighting and keep only one face in view.
                </div>
            </div>
        </div>

        <!-- Right: Camera -->
        <div class="col-lg-8">
            <div class="glass rounded-4 p-3">
                <div class="cam-shell">
                    <video id="camA" autoplay playsinline muted></video>
                    <canvas id="capA" width="640" height="480"></canvas>
                    <div id="guideA" class="center-guide"></div>
                    <div id="faceBoxA" class="facebox"></div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="@Url.Content("~/Scripts/jquery-3.7.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")"></script>

<script src="@Url.Content("~/Scripts/vendor/toastr/toastr.min.js")"></script>
<script src="@Url.Content("~/Scripts/vendor/sweetalert2/sweetalert2.min.js")"></script>

<script src="@Url.Content("~/Scripts/admin-enroll.js")"></script>
</body>
</html>
