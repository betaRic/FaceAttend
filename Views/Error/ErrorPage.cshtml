@{
    Layout = null;

    var code = 500;
    if (ViewBag.StatusCode != null)
    {
        try { code = (int)ViewBag.StatusCode; } catch { }
    }

    var title = (ViewBag.TitleText as string) ?? "Error";
    var msg = (ViewBag.MessageText as string) ?? "An unexpected error occurred.";
    var reqId = (ViewBag.RequestId as string) ?? "";

    Response.Cache.SetCacheability(System.Web.HttpCacheability.NoCache);
    Response.Cache.SetNoStore();
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@code - @title - FaceAttend</title>
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/Content/favicon.ico")" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/vendor")
    <link href="@Url.Content("~/Content/error.css")" rel="stylesheet" />
</head>
<body class="fa-error-body">

    <main class="fa-error-shell">
        <div class="fa-error-card">

            <div class="fa-error-brand">
                <img class="fa-error-logo" src="@Url.Content("~/Content/images/dilg-logo.svg")" alt="DILG" />
                <div class="fa-error-brandtext">
                    <div class="fa-error-app">FaceAttend</div>
                    <div class="fa-error-sub">Face attendance system</div>
                </div>
            </div>

            <div class="fa-error-code">@code</div>
            <h1 class="fa-error-title">@title</h1>
            <p class="fa-error-msg">@msg</p>

            <div class="fa-error-actions">
                <a class="btn btn-primary" href="@Url.Action("Index", "Kiosk", new { area = "" })">
                    <i class="fa-solid fa-desktop me-2" aria-hidden="true"></i>Go to kiosk
                </a>
                <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                    <i class="fa-solid fa-gauge-high me-2" aria-hidden="true"></i>Admin
                </a>
                <button type="button" class="btn btn-outline-secondary" onclick="history.back()">
                    <i class="fa-solid fa-arrow-left me-2" aria-hidden="true"></i>Back
                </button>
            </div>

            @if (!string.IsNullOrWhiteSpace(reqId))
            {
                <div class="fa-error-meta">
                    <span class="text-muted">Request ID:</span>
                    <span class="fa-error-mono">@reqId</span>
                </div>
            }

        </div>
    </main>

</body>
</html>
