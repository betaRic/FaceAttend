@model System.Collections.Generic.List<Employee>
@{
    ViewBag.Title = "Employees";

    var q = (ViewBag.Q ?? "").ToString();
    var showInactive = ViewBag.ShowInactive != null && (bool)ViewBag.ShowInactive;

    int page = ViewBag.Page == null ? 1 : System.Convert.ToInt32(ViewBag.Page);
    int pageSize = ViewBag.PageSize == null ? 200 : System.Convert.ToInt32(ViewBag.PageSize);
    int total = ViewBag.Total == null ? Model.Count : System.Convert.ToInt32(ViewBag.Total);

    int totalPages = (int)System.Math.Ceiling(total / (double)pageSize);
    if (totalPages < 1) totalPages = 1;
    if (page < 1) page = 1;
    if (page > totalPages) page = totalPages;

    int start = total == 0 ? 0 : ((page - 1) * pageSize) + 1;
    int end = System.Math.Min(page * pageSize, total);

    int startPage = System.Math.Max(1, page - 3);
    int endPage = System.Math.Min(totalPages, startPage + 6);
    if (endPage - startPage < 6) startPage = System.Math.Max(1, endPage - 6);
}

<div class="d-flex align-items-center justify-content-between mb-2">
    <h3 class="mb-0">
        <i class="fa-solid fa-users me-2" aria-hidden="true"></i>
        Employees
    </h3>
    <a class="btn btn-primary" href="@Url.Action("Create")">
        <i class="fa-solid fa-user-plus me-1" aria-hidden="true"></i>
        Add employee
    </a>
</div>

@using (Html.BeginForm("Index", "Employees", FormMethod.Get, new { area = "Admin", @class = "row g-2 align-items-end mb-3" }))
{
    <div class="col-sm-6 col-md-5">
        <label class="form-label">Search</label>
        <input class="form-control" name="q" value="@q" placeholder="EmployeeId, name, department" />
    </div>

    <div class="col-sm-3 col-md-3">
        <div class="form-check mt-4">
            <input class="form-check-input" type="checkbox" id="showInactive" name="showInactive" value="true" @(showInactive ? "checked" : "") />
            <label class="form-check-label" for="showInactive">Show inactive</label>
        </div>
    </div>

    <div class="col-sm-3 col-md-4 text-sm-end">
        <button class="btn btn-outline-primary" type="submit">Apply</button>
        <a class="btn btn-outline-secondary ms-1" href="@Url.Action("Index")">Reset</a>
    </div>
}

@if (total > 0)
{
    <div class="text-muted mb-2">Showing @start-@end of @total</div>
}
else
{
    <div class="text-muted mb-2">No employees found.</div>
}

<div class="admin-card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-sm align-middle mb-0" data-dt-no-sort-last="1">
                <thead>
                    <tr>
                        <th>EmployeeId</th>
                        <th>Name</th>
                        <th>Office</th>
                        <th>Status</th>
                        <th>Face</th>
                        <th style="width:280px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td>@e.EmployeeId</td>
                            <td>
                                @(e.LastName + ", " + e.FirstName + (string.IsNullOrWhiteSpace(e.MiddleName) ? "" : " " + e.MiddleName))
                            </td>
                            <td>
                                @{
                                    var names = ViewBag.OfficeNames as System.Collections.Generic.Dictionary<int, string>;
                                    var officeName = (names != null && names.ContainsKey(e.OfficeId)) ? names[e.OfficeId] : "-";
                                }
                                @officeName
                            </td>
                            <td>
                                @if (e.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                @if (string.IsNullOrEmpty(e.FaceEncodingBase64))
                                {
                                    <span class="badge bg-warning text-dark">Not enrolled</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">Enrolled</span>
                                }
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Enroll", new { id = e.Id })">
                                    <i class="fa-solid fa-camera me-1" aria-hidden="true"></i>
                                    Enroll face
                                </a>
                                <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Edit", new { id = e.Id })">
                                    <i class="fa-solid fa-pen me-1" aria-hidden="true"></i>
                                    Edit
                                </a>
                                @using (Html.BeginForm("Delete", "Employees", FormMethod.Post, new { area = "Admin", @class = "d-inline" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@e.Id" />
                                    <button class="btn btn-sm btn-outline-danger" type="submit"
                                            data-confirm="Deactivate this employee?"
                                            data-confirm-text="This will disable kiosk logins for this record."
                                            data-confirm-icon="warning">
                                        <i class="fa-solid fa-user-slash me-1" aria-hidden="true"></i>
                                        Deactivate
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <nav class="mt-3" aria-label="Employees pagination">
                <ul class="pagination mb-0">
                    <li class="page-item @(page <= 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { q = q, showInactive = showInactive, page = page - 1 })">Prev</a>
                    </li>

                    @for (int p = startPage; p <= endPage; p++)
                    {
                        <li class="page-item @(p == page ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { q = q, showInactive = showInactive, page = p })">@p</a>
                        </li>
                    }

                    <li class="page-item @(page >= totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { q = q, showInactive = showInactive, page = page + 1 })">Next</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>
