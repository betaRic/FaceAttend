@model EmployeeEditVm
@{
    ViewBag.Title = "Add Employee";
}

<div class="ea-page">

    <div class="ea-page-header">
        <div>
            <h1 class="ea-page-title">
                <i class="fa-solid fa-user-plus" aria-hidden="true"></i>
                Add Employee
            </h1>
            <div class="ea-page-subtitle">Fill in the details below. Face enrollment happens on the next step.</div>
        </div>
        <div class="ea-page-actions">
            <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Index")">
                <i class="fa-solid fa-arrow-left me-1" aria-hidden="true"></i>Back to list
            </a>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="ea-form-card">

            <div class="ea-form-header">
                <div class="ea-form-title">
                    <i class="fa-solid fa-id-card" aria-hidden="true"></i>
                    Employee Information
                </div>
            </div>

            <div class="ea-form-body">

                @* -- Identity section -- *@
                <div class="ea-form-section">
                    <div class="ea-form-section-title">
                        <i class="fa-solid fa-user fa-xs" aria-hidden="true"></i>
                        Identity
                    </div>
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Employee ID <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.EmployeeId, new {
                                @class = "form-control",
                                placeholder = "e.g. EMP-001",
                                style = "text-transform:uppercase;"
                            })
                            @Html.ValidationMessageFor(m => m.EmployeeId, "", new { @class = "text-danger small mt-1 d-block" })
                        </div>
                        <div class="col-md-9">
                            <label class="form-label">First Name <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.FirstName, new {
                                @class = "form-control",
                                placeholder = "First name",
                                style = "text-transform:uppercase;"
                            })
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger small mt-1 d-block" })
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Middle Name</label>
                            @Html.TextBoxFor(m => m.MiddleName, new {
                                @class = "form-control",
                                placeholder = "Middle name (optional)",
                                style = "text-transform:uppercase;"
                            })
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last Name <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.LastName, new {
                                @class = "form-control",
                                placeholder = "Last name",
                                style = "text-transform:uppercase;"
                            })
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger small mt-1 d-block" })
                        </div>
                    </div>
                </div>

                @* -- Role & Office section -- *@
                <div class="ea-form-section">
                    <div class="ea-form-section-title">
                        <i class="fa-solid fa-building fa-xs" aria-hidden="true"></i>
                        Role &amp; Office
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Position</label>
                            @Html.TextBoxFor(m => m.Position, new {
                                @class = "form-control",
                                placeholder = "e.g. Administrative Officer"
                            })
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Department</label>
                            @Html.TextBoxFor(m => m.Department, new {
                                @class = "form-control",
                                placeholder = "e.g. ICT Unit"
                            })
                        </div>
                        <div class="col-md-8">
                            <label class="form-label">Assigned Office <span class="text-danger">*</span></label>
                            @Html.DropDownListFor(m => m.OfficeId,
                                (SelectList)ViewBag.Offices,
                                "-- Select office --",
                                new { @class = "form-select" })
                            @Html.ValidationMessageFor(m => m.OfficeId, "", new { @class = "text-danger small mt-1 d-block" })
                        </div>
                    </div>
                </div>

                @* -- Schedule & Status section -- *@
                <div class="ea-form-section mb-0">
                    <div class="ea-form-section-title">
                        <i class="fa-solid fa-clock fa-xs" aria-hidden="true"></i>
                        Schedule &amp; Status
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 border rounded-3 bg-light-subtle">
                                <div class="d-flex align-items-center gap-2 mb-1">
                                    @Html.CheckBoxFor(m => m.IsFlexi, new { @class = "form-check-input mt-0", id = "IsFlexi" })
                                    <label class="form-check-label fw-semibold" for="IsFlexi">
                                        <i class="fa-solid fa-clock-rotate-left me-1 text-info" aria-hidden="true"></i>
                                        Flexi schedule
                                    </label>
                                </div>
                                <div class="text-muted small">No fixed time-in/out. Must complete 8 working hours.</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 border rounded-3 bg-light-subtle">
                                <div class="d-flex align-items-center gap-2 mb-1">
                                    @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input mt-0", id = "IsActive" })
                                    <label class="form-check-label fw-semibold" for="IsActive">
                                        <i class="fa-solid fa-circle-check me-1 text-success" aria-hidden="true"></i>
                                        Active
                                    </label>
                                </div>
                                <div class="text-muted small">Inactive employees cannot use the kiosk.</div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="ea-form-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-arrow-right me-1" aria-hidden="true"></i>
                    Save &amp; Enroll Face
                </button>
                <a class="btn btn-outline-secondary" href="@Url.Action("Index")">
                    Cancel
                </a>
            </div>

        </div>
    }

</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
    /* Auto-uppercase identity fields */
    ['EmployeeId','FirstName','MiddleName','LastName'].forEach(function(id) {
        var el = document.getElementById(id);
        if (!el) return;
        el.addEventListener('input', function () {
            var pos = el.selectionStart;
            el.value = el.value.toUpperCase();
            el.setSelectionRange(pos, pos);
        });
    });
    </script>
}
