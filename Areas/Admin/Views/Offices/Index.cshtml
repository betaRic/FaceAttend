@model System.Collections.Generic.List<Office>
@{
    ViewBag.Title = "Offices";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">
        <i class="fa-solid fa-building me-2" aria-hidden="true"></i>
        Offices
    </h3>
    <a class="btn btn-primary" href="@Url.Action("Create")">
        <i class="fa-solid fa-plus me-1" aria-hidden="true"></i>
        Create office
    </a>
</div>

<div class="admin-card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-sm align-middle js-datatable" data-dt-page-length="25" data-dt-no-sort-last="1">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Type</th>
                        <th>Radius (m)</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Status</th>
                        <th style="width: 110px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@o.Name</td>
                            <td>@(o.Code ?? "-")</td>
                            <td>@(o.Type ?? "-")</td>
                            <td>@o.RadiusMeters</td>
                            <td>@o.Latitude.ToString("F4")</td>
                            <td>@o.Longitude.ToString("F4")</td>
                            <td>
                                @if (o.IsActive)
                                {<span class="badge bg-success">Active</span> }
                                else
                                { <span class="badge bg-secondary">Inactive</span>}
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Edit", new { id = o.Id })">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>