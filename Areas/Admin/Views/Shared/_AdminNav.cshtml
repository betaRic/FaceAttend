            <i class="fa-solid fa-gauge-high me-2"></i>
            Dashboard
        </a>

        <a class="admin-nav-link @(isActive("/admin/employees") ? "active" : "")"
           href="@Url.Action("Index","Employees", new { area = "Admin" })">
