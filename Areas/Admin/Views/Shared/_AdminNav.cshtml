@{
    var controller = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
    var action = (ViewContext.RouteData.Values["action"]?.ToString() ?? "").ToLowerInvariant();

    Func<string, string, bool> isRoute = (c, a) =>
        controller == (c ?? "").ToLowerInvariant() && action == (a ?? "").ToLowerInvariant();

    var isDashboard = isRoute("Dashboard", "Index");
    var isEmployees = controller == "employees";
    var isOffices = controller == "offices";

    var isAttendanceSummary = isRoute("Attendance", "SummaryReport");
    var isAttendance = controller == "attendance" && !isAttendanceSummary;

    var isVisitorLogs = isRoute("Visitors", "Logs");
    var isVisitors = controller == "visitors" && !isVisitorLogs;

    var isSettings = controller == "settings";
}

<nav class="admin-nav">
    <div class="admin-nav-section">
        <div class="admin-nav-title">Menu</div>

        <a class="admin-nav-link @(isDashboard ? "active" : "")"
           href="@Url.Action("Index","Dashboard", new { area = "Admin" })">
            <i class="fa-solid fa-gauge-high me-2"></i>
            Dashboard
        </a>

        <a class="admin-nav-link @(isEmployees ? "active" : "")"
           href="@Url.Action("Index","Employees", new { area = "Admin" })">
            <i class="fa-solid fa-users me-2"></i>
            Employees
        </a>

        <a class="admin-nav-link @(isOffices ? "active" : "")"
           href="@Url.Action("Index","Offices", new { area = "Admin" })">
            <i class="fa-solid fa-building me-2"></i>
            Offices
        </a>

        <a class="admin-nav-link @(isAttendance ? "active" : "")"
           href="@Url.Action("Index","Attendance", new { area = "Admin" })">
            <i class="fa-solid fa-clock me-2"></i>
            Attendance
        </a>

        <a class="admin-nav-link @(isAttendanceSummary ? "active" : "")"
           href="@Url.Action("SummaryReport","Attendance", new { area = "Admin" })">
            <i class="fa-solid fa-chart-column me-2"></i>
            Attendance Summary
        </a>

        <a class="admin-nav-link @(isVisitors ? "active" : "")"
           href="@Url.Action("Index","Visitors", new { area = "Admin" })">
            <i class="fa-solid fa-user-check me-2"></i>
            Visitors
        </a>

        <a class="admin-nav-link @(isVisitorLogs ? "active" : "")"
           href="@Url.Action("Logs","Visitors", new { area = "Admin" })">
            <i class="fa-solid fa-clipboard-list me-2"></i>
            Visitor Logs
        </a>
    </div>

    <hr class="admin-nav-sep" />

    <div class="admin-nav-section">
        <div class="admin-nav-title">Admin</div>

        <a class="admin-nav-link @(isSettings ? "active" : "")"
           href="@Url.Action("Index","Settings", new { area = "Admin" })">
            <i class="fa-solid fa-gear me-2"></i>
            Settings
        </a>
    </div>
</nav>