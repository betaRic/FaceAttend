@model Visitor
@{
    ViewBag.Title = "Enroll Visitor Face";
}
@{
    // Client-side scan tuning (server still enforces liveness in Enroll)
    var perFrame = (ViewBag.PerFrame ?? "0.75").ToString();
}

<div class="admin-card">
    <div class="card-body">

        <div class="d-flex align-items-start justify-content-between">
            <div>
                <h4 class="mb-1">Enroll Visitor Face</h4>
                <div class="text-muted">@Model.Name</div>
                <div class="text-muted small">Visitor ID: @Model.Id</div>
            </div>
            <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Back</a>
        </div>

        <hr />

        <div id="enrollRoot"
             data-employee-id="@Model.Id"
             data-per-frame="@perFrame"
             data-scan-url="@Url.Action("ScanFrame", "Visitors", new { area = "Admin" })"
             data-enroll-url="@Url.Action("EnrollWizard", "Visitors", new { area = "Admin" })">

            <!-- wizard step: choose method -->
            <div id="enrollWizard" class="mb-3">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="card h-100 enroll-choice"
                             role="button"
                             tabindex="0"
                             data-enroll-mode="live">
                            <div class="card-body">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="fa-solid fa-camera" aria-hidden="true"></i>
                                    <div class="fw-semibold">Live camera scan</div>
                                </div>
                                <div class="text-muted small mt-2">
                                    recommended: stable lighting and no glare
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card h-100 enroll-choice"
                             role="button"
                             tabindex="0"
                             data-enroll-mode="upload">
                            <div class="card-body">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="fa-solid fa-upload" aria-hidden="true"></i>
                                    <div class="fw-semibold">Upload photos</div>
                                </div>
                                <div class="text-muted small mt-2">
                                    choose 1-5 images, auto verify and enroll
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- live mode -->
            <div id="liveArea" class="row g-3" style="display:none;">
                <div class="col-md-8">
                    <div class="ratio ratio-4x3 bg-dark rounded-3 overflow-hidden">
                        <video id="cam" autoplay playsinline muted></video>
                    </div>

                    <div class="d-flex flex-wrap gap-2 mt-2">
                        <button id="btnStart" type="button" class="btn btn-primary">
                            <i class="fa-solid fa-play me-1" aria-hidden="true"></i>Start scan
                        </button>
                        <button id="btnStop" type="button" class="btn btn-outline-secondary" disabled>
                            <i class="fa-solid fa-stop me-1" aria-hidden="true"></i>Stop
                        </button>
                        <button id="btnBack" type="button" class="btn btn-link">Choose another method</button>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="border rounded-3 p-3 h-100">
                        <div class="fw-semibold mb-2">Status</div>
                        <div id="statusText" class="text-muted small">Ready</div>

                        <hr />

                        <div class="fw-semibold mb-2">Last liveness</div>
                        <div id="livenessText" class="text-muted small">-</div>

                        <hr />

                        <div class="fw-semibold mb-2">Capture</div>
                        <img id="preview" class="img-fluid rounded-3 border" alt="preview" />
                    </div>
                </div>
            </div>

            <!-- upload mode -->
            <div id="uploadArea" style="display:none;">
                <div class="border rounded-3 p-3">
                    <div class="fw-semibold mb-2">Upload photos</div>

                    @using (Html.BeginForm("", "", FormMethod.Post, new { id = "uploadForm", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="file" class="form-control" id="uploadFiles" accept="image/*" multiple />
                        <div class="text-muted small mt-2">
                            pick clear photos. one face only. no group photos.
                        </div>
                    }

                    <div class="mt-3">
                        <button id="btnBack2" type="button" class="btn btn-link">Choose another method</button>
                    </div>
                </div>
            </div>

            <canvas id="cap" style="display:none;"></canvas>
        </div>
    </div>
</div>

@section scripts{
    <style>
        .enroll-choice { cursor: pointer; }
        .enroll-choice:hover { border-color: rgba(13,110,253,.5); }
        .enroll-choice:focus { outline: 2px solid rgba(13,110,253,.4); outline-offset: 2px; }
    </style>

    <script src="~/Scripts/admin-enroll.js"></script>
}
