@model System.Collections.Generic.List<Visitor>
@{
    ViewBag.Title = "Visitors";
    var q            = (ViewBag.Query      as string) ?? "";
    var showInactive = (bool)(ViewBag.ShowInactive ?? false);
    var truncated    = (bool)(ViewBag.Truncated    ?? false);
    var cap          = (int)(ViewBag.Cap           ?? 0);
    var logsUrl      = Url.Action("Logs", "Visitors", new { area = "Admin" });
}

<div class="ea-page">

    <div class="ea-page-header">
        <div>
            <h1 class="ea-page-title">
                <i class="fa-solid fa-user-check" aria-hidden="true"></i>
                Visitors
            </h1>
            <div class="ea-page-subtitle">Walk-in visitor face enrollment and log management</div>
        </div>
        <div class="ea-page-actions">
            <a class="btn btn-primary btn-sm" href="@Url.Action("Create")">
                <i class="fa-solid fa-user-plus me-1" aria-hidden="true"></i>Add Visitor
            </a>
        </div>
    </div>

    @* -- Tabs -- *@
    <div class="ea-tabs">
        <a class="ea-tab active" href="@Url.Action("Index")" aria-current="page">
            <i class="fa-solid fa-users" aria-hidden="true"></i>
            Visitor Profiles
            @if (Model != null && Model.Any())
            {
                <span class="badge bg-primary ms-1" style="font-size:.68rem;">@Model.Count</span>
            }
        </a>
        <a class="ea-tab" href="@logsUrl">
            <i class="fa-solid fa-clipboard-list" aria-hidden="true"></i>
            Visit Logs
        </a>
    </div>

    @* -- Flash message -- *@
    @if (TempData["msg"] != null)
    {
        string msgKind = (TempData["msgKind"] as string) ?? "success";
        <div class="ea-alert @msgKind mb-3">
            <i class="fa-solid @(msgKind == "success" ? "fa-circle-check" : msgKind == "warning" ? "fa-triangle-exclamation" : "fa-circle-info") fa-sm" aria-hidden="true"></i>
            @TempData["msg"]
        </div>
    }

    @if (truncated && cap > 0)
    {
        <div class="ea-alert info mb-3">
            <i class="fa-solid fa-circle-info fa-sm" aria-hidden="true"></i>
            Showing the first @cap records. Use search to narrow results.
        </div>
    }

    @* -- Filter card -- *@
    <div class="ea-filter-card">
        <form method="get" class="row g-2 align-items-end">
            <div class="col-12 col-sm-5 col-md-4">
                <label class="ea-filter-label">
                    <i class="fa-solid fa-magnifying-glass fa-xs me-1"></i>Search
                </label>
                <div class="input-group input-group-sm">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="fa-solid fa-magnifying-glass text-muted" aria-hidden="true"></i>
                    </span>
                    <input class="form-control border-start-0 ps-0"
                           name="q" value="@q" placeholder="Name contains..." />
                </div>
            </div>
            <div class="col-12 col-sm-3 col-md-2">
                <label class="ea-filter-label">Show</label>
                <select class="form-select form-select-sm" name="showInactive">
                    <option value="false" @(!showInactive ? "selected" : "")>Active</option>
                    <option value="true"  @(showInactive  ? "selected" : "")>All</option>
                </select>
            </div>
            <div class="col-12 col-sm-auto ms-sm-auto">
                <div class="d-flex gap-2">
                    <button class="btn btn-primary btn-sm px-3" type="submit">
                        <i class="fa-solid fa-filter me-1" aria-hidden="true"></i>Apply
                    </button>
                    <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Index")">
                        <i class="fa-solid fa-rotate" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>

    @* -- Table card -- *@
    <div class="ea-table-card">
        <div class="ea-table-header">
            <div class="ea-table-title">
                <i class="fa-solid fa-users text-primary" aria-hidden="true"></i>
                Visitor Profiles
            </div>
        </div>

        <div class="table-responsive">
            @if (Model == null || !Model.Any())
            {
                <div class="ea-empty">
                    <i class="fa-solid fa-user-slash" aria-hidden="true"></i>
                    <div class="ea-empty-title">No visitors found</div>
                    <div class="ea-empty-desc">
                        @if (!string.IsNullOrWhiteSpace(q))
                        {
                            <a href="@Url.Action("Index")">Reset filters</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Create")">Add the first visitor</a>
                        }
                    </div>
                </div>
            }
            else
            {
                <table class="ea-table table table-hover align-middle mb-0 js-datatable"
                       data-dt-page-length="25"
                       data-dt-no-sort-last="1">
                    <thead>
                        <tr>
                            <th style="width:40px;"></th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Face</th>
                            <th>Visits</th>
                            <th>Last Visit</th>
                            <th style="width:220px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var v in Model)
                        {
                            bool hasFace = !string.IsNullOrEmpty(v.FaceEncodingBase64);
                            var initials = v.Name.Length > 0 ? v.Name.Substring(0, 1).ToUpperInvariant() : "V";
                            var lastVis  = v.LastVisitDate == default(DateTime)
                                ? "-"
                                : v.LastVisitDate.ToLocalTime().ToString("MMM d, yyyy");

                            <tr>
                                <td>
                                    <div class="ea-avatar sm" style="background: linear-gradient(135deg,#6f42c1,#4b1fa8);">@initials</div>
                                </td>
                                <td>
                                    <div class="fw-semibold" style="font-size:.88rem;">@v.Name</div>
                                </td>
                                <td>
                                    @if (v.IsActive)
                                    {
                                        <span class="ea-badge active"><i class="fa-solid fa-circle-check fa-xs"></i>Active</span>
                                    }
                                    else
                                    {
                                        <span class="ea-badge inactive"><i class="fa-solid fa-circle-xmark fa-xs"></i>Inactive</span>
                                    }
                                </td>
                                <td>
                                    @if (hasFace)
                                    {
                                        <span class="ea-badge enrolled"><i class="fa-solid fa-camera fa-xs"></i>Enrolled</span>
                                    }
                                    else
                                    {
                                        <span class="ea-badge not-enrolled"><i class="fa-solid fa-camera-slash fa-xs"></i>Not enrolled</span>
                                    }
                                </td>
                                <td class="ea-cell-muted">
                                    <i class="fa-solid fa-arrow-right-to-bracket fa-xs me-1" aria-hidden="true"></i>
                                    @v.VisitCount
                                </td>
                                <td class="ea-cell-muted">@lastVis</td>
                                <td class="text-end">
                                    <div class="d-flex gap-1 justify-content-end">
                                        <a class="btn btn-sm btn-outline-primary"
                                           href="@Url.Action("Enroll", new { id = v.Id })"
                                           title="Enroll face">
                                            <i class="fa-solid fa-camera" aria-hidden="true"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-secondary"
                                           href="@Url.Action("Edit", new { id = v.Id })"
                                           title="Edit">
                                            <i class="fa-solid fa-pen" aria-hidden="true"></i>
                                        </a>
                                        @if (v.IsActive)
                                        {
                                            using (Html.BeginForm("Deactivate", "Visitors", FormMethod.Post, new { area = "Admin", @class = "d-inline" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@v.Id" />
                                                <button class="btn btn-sm btn-outline-danger"
                                                        type="submit"
                                                        data-confirm="Deactivate this visitor?"
                                                        data-confirm-icon="warning"
                                                        title="Deactivate">
                                                    <i class="fa-solid fa-ban" aria-hidden="true"></i>
                                                </button>
                                            }
                                        }
</div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

</div>
