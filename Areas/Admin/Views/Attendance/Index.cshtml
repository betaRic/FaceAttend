@model AttendanceIndexVm
@{
    ViewBag.Title = "Attendance";

    Func<int, string> pageUrl = pg => Url.Action("Index", new {
        from          = Model.From,
        to            = Model.To,
        officeId      = Model.OfficeId,
        employee      = Model.Employee,
        eventType     = Model.EventType,
        needsReview   = Model.NeedsReviewOnly,
        page          = pg,
        pageSize      = Model.PageSize
    });

    var exportUrl = Url.Action("Export", new {
        from        = Model.From,
        to          = Model.To,
        officeId    = Model.OfficeId,
        employee    = Model.Employee,
        eventType   = Model.EventType,
        needsReview = Model.NeedsReviewOnly
    });

    var summaryUrl = Url.Action("SummaryReport", new {
        from     = Model.From,
        to       = Model.To,
        officeId = Model.OfficeId
    });
}

<div class="ea-page">

    @* -- Page header -- *@
    <div class="ea-page-header">
        <div>
            <h1 class="ea-page-title">
                <i class="fa-solid fa-clock-rotate-left" aria-hidden="true"></i>
                Attendance Logs
            </h1>
            <div class="ea-page-subtitle">
                @if (!string.IsNullOrWhiteSpace(Model.ActiveRangeLabel))
                {
                    <span>@Model.ActiveRangeLabel</span>
                }
                @if (Model.NeedsReviewOnly)
                {
                    <span class="ea-badge review ms-2">
                        <i class="fa-solid fa-triangle-exclamation fa-xs"></i>Review queue
                    </span>
                }
            </div>
        </div>
        <div class="ea-page-actions">
            <a class="btn btn-outline-secondary btn-sm" href="@summaryUrl">
                <i class="fa-solid fa-table me-1" aria-hidden="true"></i>Summary Report
            </a>
            <a class="btn btn-outline-primary btn-sm" href="@exportUrl" target="_blank">
                <i class="fa-solid fa-file-export me-1" aria-hidden="true"></i>Export CSV
                <span class="badge bg-secondary ms-1" style="font-size:.65rem;">max @Model.ExportMaxRows</span>
            </a>
            @if (!Model.NeedsReviewOnly && Model.TotalNeedsReview > 0)
            {
                <a class="btn btn-warning btn-sm"
                   href="@Url.Action("Index", new { from = Model.From, to = Model.To, officeId = Model.OfficeId, employee = Model.Employee, eventType = Model.EventType, needsReview = true, pageSize = Model.PageSize })">
                    <i class="fa-solid fa-triangle-exclamation me-1" aria-hidden="true"></i>
                    Review Queue
                    <span class="badge bg-dark ms-1">@Model.TotalNeedsReview</span>
                </a>
            }
        </div>
    </div>

    @* -- KPI row -- *@
    @if (Model.ShowSummary)
    {
        <div class="row g-3 mb-3">
            <div class="col-6 col-lg-3">
                <div class="ea-kpi">
                    <div class="ea-kpi-icon primary">
                        <i class="fa-solid fa-fingerprint" aria-hidden="true"></i>
                    </div>
                    <div class="ea-kpi-body">
                        <div class="ea-kpi-num">@Model.Total.ToString("N0")</div>
                        <div class="ea-kpi-label">Total Records</div>
                    </div>
                </div>
            </div>
            @if (Model.AttendanceRatePercent.HasValue)
            {
                <div class="col-6 col-lg-3">
                    <div class="ea-kpi">
                        <div class="ea-kpi-icon success">
                            <i class="fa-solid fa-chart-pie" aria-hidden="true"></i>
                        </div>
                        <div class="ea-kpi-body">
                            <div class="ea-kpi-num">@Model.AttendanceRatePercent.Value<span style="font-size:1rem;font-weight:500;">%</span></div>
                            <div class="ea-kpi-label">Attendance Rate</div>
                            <div class="ea-kpi-sub">@Model.TotalActiveEmployees active employees</div>
                        </div>
                    </div>
                </div>
            }
            @if (Model.TotalNeedsReview > 0)
            {
                <div class="col-6 col-lg-3">
                    <a class="ea-kpi" href="@Url.Action("Index", new { from = Model.From, to = Model.To, needsReview = true })">
                        <div class="ea-kpi-icon warning">
                            <i class="fa-solid fa-triangle-exclamation" aria-hidden="true"></i>
                        </div>
                        <div class="ea-kpi-body">
                            <div class="ea-kpi-num">@Model.TotalNeedsReview</div>
                            <div class="ea-kpi-label">Needs Review</div>
                            <div class="ea-kpi-sub">Click to review</div>
                        </div>
                    </a>
                </div>
            }
            @if (Model.OfficeBreakdown.Any())
            {
                <div class="col-6 col-lg-3">
                    <div class="ea-kpi">
                        <div class="ea-kpi-icon info" style="background:rgba(13,202,240,.1);color:#0a8ea0;">
                            <i class="fa-solid fa-building" aria-hidden="true"></i>
                        </div>
                        <div class="ea-kpi-body">
                            <div class="ea-kpi-num">@Model.OfficeBreakdown.Count</div>
                            <div class="ea-kpi-label">Offices Active</div>
                            <div class="ea-kpi-sub">@Model.OfficeBreakdown.First().OfficeName leading</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @* -- Filter card -- *@
    <div class="ea-filter-card">
        @* Quick ranges *@
        <div class="ea-quick-range mb-3">
            <span class="text-muted" style="font-size:.78rem;font-weight:600;">Quick:</span>
            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Index", new { from = "today",     pageSize = Model.PageSize })">Today</a>
            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Index", new { from = "thisweek",  pageSize = Model.PageSize })">This Week</a>
            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Index", new { from = "lastweek",  pageSize = Model.PageSize })">Last Week</a>
            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Index", new { from = "thismonth", pageSize = Model.PageSize })">This Month</a>
        </div>

        <form method="get" action="@Url.Action("Index")" class="row g-2 align-items-end">
            <div class="col-12 col-sm-6 col-md-2">
                <label class="ea-filter-label">From</label>
                <input type="date" class="form-control form-control-sm" name="from" value="@Model.From" />
            </div>
            <div class="col-12 col-sm-6 col-md-2">
                <label class="ea-filter-label">To</label>
                <input type="date" class="form-control form-control-sm" name="to" value="@Model.To" />
            </div>
            <div class="col-12 col-sm-6 col-md-2">
                <label class="ea-filter-label">Office</label>
                @Html.DropDownList("officeId", Model.OfficeOptions, "All offices", new { @class = "form-select form-select-sm" })
            </div>
            <div class="col-12 col-sm-6 col-md-2">
                <label class="ea-filter-label">Employee</label>
                <input class="form-control form-control-sm" name="employee"
                       value="@Model.Employee" placeholder="ID or name" />
            </div>
            <div class="col-12 col-sm-4 col-md-1">
                <label class="ea-filter-label">Type</label>
                <select class="form-select form-select-sm" name="eventType">
                    <option value="ALL"  @(Model.EventType == "ALL"  ? "selected" : "")>All</option>
                    <option value="IN"   @(Model.EventType == "IN"   ? "selected" : "")>Time In</option>
                    <option value="OUT"  @(Model.EventType == "OUT"  ? "selected" : "")>Time Out</option>
                </select>
            </div>
            <div class="col-12 col-sm-4 col-md-1">
                <label class="ea-filter-label">Per page</label>
                <select class="form-select form-select-sm" name="pageSize">
                    @foreach (var sz in new[] { 25, 50, 100, 200 })
                    {
                        <option value="@sz" @(Model.PageSize == sz ? "selected" : "")>@sz</option>
                    }
                </select>
            </div>
            <div class="col-12 col-sm-4 col-md-auto ms-md-auto">
                <div class="d-flex gap-2">
                    <button class="btn btn-primary btn-sm px-3" type="submit">
                        <i class="fa-solid fa-filter me-1" aria-hidden="true"></i>Apply
                    </button>
                    <a class="btn btn-outline-secondary btn-sm"
                       href="@Url.Action("Index")">
                        <i class="fa-solid fa-rotate" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>

    @* -- Table card -- *@
    <div class="ea-table-card">
        <div class="ea-table-header">
            <div class="ea-table-title">
                <i class="fa-solid fa-list text-primary" aria-hidden="true"></i>
                Attendance Records
            </div>
            @if (Model.Total > 0)
            {
                <span class="badge bg-primary-subtle text-primary border border-primary-subtle" style="font-size:.75rem;">
                    @Model.Total.ToString("N0") record@(Model.Total == 1 ? "" : "s")
                </span>
            }
        </div>

        <div class="table-responsive">
            @if (!Model.Rows.Any())
            {
                <div class="ea-empty">
                    <i class="fa-solid fa-magnifying-glass" aria-hidden="true"></i>
                    <div class="ea-empty-title">No records found</div>
                    <div class="ea-empty-desc">Try adjusting the date range or filters.</div>
                </div>
            }
            else
            {
                <table class="ea-table table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Time</th>
                            <th>Employee</th>
                            <th>Type</th>
                            <th>Office</th>
                            <th>Liveness</th>
                            <th>Distance</th>
                            <th>Flags</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var row in Model.Rows)
                        {
                            var localTime = row.TimestampUtc.ToLocalTime();
                            var isIn  = row.EventType == "IN"  || row.EventType == "TimeIn";
                            var isOut = row.EventType == "OUT" || row.EventType == "TimeOut";

                            <tr class="@(row.NeedsReview ? "table-warning" : "")">
                                <td style="white-space:nowrap;">
                                    <div class="fw-semibold" style="font-size:.85rem;">@localTime.ToString("HH:mm:ss")</div>
                                    <div class="ea-cell-muted">@localTime.ToString("MMM d, yyyy")</div>
                                </td>
                                <td>
                                    <div class="fw-semibold" style="font-size:.875rem;">@row.EmployeeFullName</div>
                                    @if (!string.IsNullOrWhiteSpace(row.EmployeeId))
                                    {
                                        <div class="ea-cell-muted">@row.EmployeeId
                                        @if (!string.IsNullOrWhiteSpace(row.Department))
                                        {
                                            <span class="ms-1">- @row.Department</span>
                                        }
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if (isIn)
                                    {
                                        <span class="ea-badge time-in">
                                            <i class="fa-solid fa-arrow-right-to-bracket fa-xs"></i>IN
                                        </span>
                                    }
                                    else if (isOut)
                                    {
                                        <span class="ea-badge time-out">
                                            <i class="fa-solid fa-arrow-right-from-bracket fa-xs"></i>OUT
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="ea-badge secondary">@row.EventType</span>
                                    }
                                </td>
                                <td class="ea-cell-muted" style="font-size:.82rem;">
                                    @(string.IsNullOrWhiteSpace(row.OfficeName) ? "-" : row.OfficeName)
                                    @if (!string.IsNullOrWhiteSpace(row.WiFiSSID))
                                    {
                                        <div>
                                            <i class="fa-solid fa-wifi fa-xs text-success me-1" aria-hidden="true"></i>@row.WiFiSSID
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if (row.LivenessScore.HasValue)
                                    {
                                        var lv = row.LivenessScore.Value;
                                        var lvCls = lv >= 0.8 ? "text-success" : lv >= 0.6 ? "text-warning" : "text-danger";
                                        <span class="fw-semibold @lvCls" style="font-size:.82rem;">
                                            @(lv.ToString("0.00"))
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (row.FaceDistance.HasValue)
                                    {
                                        var fd = row.FaceDistance.Value;
                                        var fdCls = fd <= 0.45 ? "text-success" : fd <= 0.6 ? "text-warning" : "text-danger";
                                        <span class="fw-semibold @fdCls" style="font-size:.82rem;">
                                            @(fd.ToString("0.000"))
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-1 flex-wrap">
                                        @if (row.NeedsReview)
                                        {
                                            <span class="ea-badge review" title="Needs review">
                                                <i class="fa-solid fa-flag fa-xs"></i>Review
                                            </span>
                                        }
                                        @if (row.LocationVerified)
                                        {
                                            <span class="ea-badge active" title="Location verified">
                                                <i class="fa-solid fa-location-check fa-xs"></i>GPS
                                            </span>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>

        @* Pagination *@
        @if (Model.Total > 0)
        {
            <div class="ea-table-footer">
                <div class="ea-table-info">
                    @{
                        int startRec = (Model.Page - 1) * Model.PageSize + 1;
                        int endRec   = System.Math.Min(Model.Page * Model.PageSize, Model.Total);
                    }
                    Showing @startRec - @endRec of @Model.Total.ToString("N0")
                </div>
                <nav aria-label="Attendance pages">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                            <a class="page-link" href="@pageUrl(Model.Page - 1)" aria-label="Previous">
                                <i class="fa-solid fa-chevron-left" aria-hidden="true"></i>
                            </a>
                        </li>
                        @{
                            int pStart = System.Math.Max(1, Model.Page - 2);
                            int pEnd   = System.Math.Min(Model.TotalPages, Model.Page + 2);
                            for (int pg = pStart; pg <= pEnd; pg++)
                            {
                                <li class="page-item @(pg == Model.Page ? "active" : "")">
                                    <a class="page-link" href="@pageUrl(pg)">@pg</a>
                                </li>
                            }
                        }
                        <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="@pageUrl(Model.Page + 1)" aria-label="Next">
                                <i class="fa-solid fa-chevron-right" aria-hidden="true"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="ea-table-info">
                    <a href="@summaryUrl" class="text-decoration-none">
                        <i class="fa-solid fa-table me-1" aria-hidden="true"></i>Summary Report
                    </a>
                </div>
            </div>
        }
    </div>

</div>
