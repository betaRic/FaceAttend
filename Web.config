    </compilers>
  </system.codedom>

  <!-- ============================================ -->
  <!-- WEB SERVER (IIS)                             -->
  <!-- ============================================ -->
  <system.webServer>
    <!-- File Upload Size Limits -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="10485760" />
