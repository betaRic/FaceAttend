<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 -->
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
  </configSections>
  <!-- ============================================ -->
  <!-- CONNECTION STRINGS                           -->
  <!-- ============================================ -->
  <connectionStrings>
    <add name="FaceAttendDBEntities" connectionString="metadata=res://*/FaceAttendDBEntities.csdl|res://*/FaceAttendDBEntities.ssdl|res://*/FaceAttendDBEntities.msl;provider=System.Data.SqlClient;provider connection string=&quot;data source=localhost\SQLEXPRESS;initial catalog=FaceAttendDB;integrated security=True;trustservercertificate=True;MultipleActiveResultSets=True;App=EntityFramework&quot;" providerName="System.Data.EntityClient" />
  </connectionStrings>
  <!-- ============================================ -->
  <!-- APPLICATION SETTINGS                         -->
  <!-- ============================================ -->
  <appSettings>
    <!-- ASP.NET MVC Settings -->
    <add key="webpages:Version" value="3.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
    <!-- ============================================ -->
    <!-- ADMIN SETTINGS                               -->
    <!-- ============================================ -->
    <!--
      SECURITY: The hash below is PBKDF2 of a test PIN.
      Generate your own before deployment:
        PowerShell (in project directory):
          Add-Type -Path "bin\FaceAttend.dll"
          [FaceAttend.Filters.AdminAuthorizeAttribute]::HashPinPbkdf2("YOUR_PIN")
        Then paste the result here.
    -->
    <add key="Admin:PinHash" value="PBKDF2$120000$I9RiXESyonQY50itI+geLg==$TGw8qRFtiJMD94nE0bwLLOpQKkl7DZeexxVRlvUbGm8=" />
    <!-- Session timeout in minutes -->
    <add key="Admin:SessionMinutes" value="30" />
    <!-- Max failed PIN attempts before lockout -->
    <add key="Admin:MaxPinAttempts" value="5" />
    <!-- PIN lockout duration in seconds -->
    <add key="Admin:PinLockoutSeconds" value="300" />
    <!-- One-time unlock cookie lifetime (seconds). Used for session ID rotation after PIN success. -->
    <add key="Admin:UnlockCookieSeconds" value="120" />
    <!--
      P4-F1: IP allowlist for Admin area (P1-F1 wired this in).
      Empty string = allow all IPs (development default).
      Production: set to your office IP range in CIDR notation.
      Example: "203.177.45.0/24, 10.0.0.50"
      Multiple ranges: comma-separated.
      Emergency bypass: create ~/App_Data/emergency_bypass.txt
        EXPIRES: 2026-02-22T08:00:00Z
        REASON: Emergency maintenance
    -->
    <add key="Admin:AllowedIpRanges" value="" />
    <!-- ============================================ -->
    <!-- SECURITY HEADERS                             -->
    <!-- ============================================ -->
    <!--
      P4-F1: HSTS enabled — only safe after HTTPS is enforced end-to-end.
      Set to true once the HTTPS redirect below is uncommented and SSL cert is valid.
    -->
    <add key="Security:HstsEnabled" value="false" />
    <add key="Security:HstsValue" value="max-age=31536000; includeSubDomains" />
    <!--
      P4-F1: CSP enforcement.
      false = enforced (blocks violations). true = report-only (logs but does not block).
      Switch to false only after verifying no CSP violations in staging.
    -->
    <add key="Security:CspReportOnly" value="true" />
    <add key="Security:Csp" value="default-src 'self'; base-uri 'self'; object-src 'none'; frame-ancestors 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self'" />
    <!-- ============================================ -->
    <!-- BIOMETRICS SETTINGS                          -->
    <!-- ============================================ -->
    <add key="Biometrics:DlibModelsDir" value="~/App_Data/models/dlib" />
    <add key="Biometrics:DlibDetector" value="hog" />
    <add key="Biometrics:DlibTolerance" value="0.60" />
    <add key="Biometrics:LivenessModelPath" value="~/App_Data/models/liveness/minifasnet.onnx" />
    <add key="Biometrics:LivenessInputSize" value="128" />
    <add key="Biometrics:LivenessThreshold" value="0.75" />
    <add key="Biometrics:Liveness:CropScale" value="2.7" />
    <add key="Biometrics:Liveness:Normalize" value="0_1" />
    <add key="Biometrics:Liveness:OutputType" value="logits" />
    <add key="Biometrics:Liveness:RealIndex" value="1" />
    <add key="Biometrics:Liveness:Decision" value="max" />
    <add key="Biometrics:Liveness:MultiCropScales" value="2.7" />
    <add key="Biometrics:Liveness:ChannelOrder" value="RGB" />
    <add key="Biometrics:Liveness:CircuitFailStreak" value="3" />
    <add key="Biometrics:Liveness:CircuitDisableSeconds" value="30" />
    <add key="Biometrics:Liveness:SlowMs" value="1200" />
    <add key="Biometrics:Liveness:RunTimeoutMs" value="1500" />
    <add key="Biometrics:Liveness:GateWaitMs" value="300" />
    <add key="Biometrics:MaxUploadBytes" value="10485760" />
    <add key="Biometrics:EmployeeIdMaxLen" value="20" />
    <add key="Biometrics:EmployeeIdPattern" value="^[A-Z0-9_-]{1,20}$" />
    <!-- P3-F3: BallTree threshold — build O(log n) index when enrolled employee count >= this value. -->
    <add key="Biometrics:BallTreeThreshold" value="50" />
    <!-- P3-F3: BallTree leaf size — tune for your employee count (default 16 is safe). -->
    <add key="Biometrics:BallTreeLeafSize" value="16" />
    <!-- P3-F1: Maximum image dimension (px) before resizing. Images larger than this are downscaled. -->
    <add key="Biometrics:MaxImageDimension" value="1280" />
    <!-- P3-F1: JPEG quality for the resized temp image (40-95). -->
    <add key="Biometrics:PreprocessJpegQuality" value="88" />
    <!--
      P3-F4: Adaptive tolerance tuning (FaceMatchTuner).
      false = disabled (default, safe). Set to true in production only after
      validating that the adjustments match your hardware and lighting conditions.
    -->
    <add key="Biometrics:FaceMatchTunerEnabled" value="true" />
    <!-- SECURITY: Always false in production. -->
    <add key="Biometrics:Debug" value="false" />
    <!-- ============================================ -->
    <!-- LOCATION SETTINGS                            -->
    <!-- ============================================ -->
    <add key="Location:GPSRadiusDefault" value="100" />
    <add key="Location:GPSAccuracyRequired" value="50" />
    <!-- ============================================ -->
    <!-- KIOSK SETTINGS                               -->
    <!-- ============================================ -->
    <add key="Kiosk:UseNextGen" value="true" />
    <add key="Kiosk:EnablePerfTimings" value="false" />
    <add key="Kiosk:IdleMinutes" value="5" />
    <!-- Rate limiting: max ScanFrame requests per IP per window -->
    <add key="Kiosk:ScanFrameMaxPerMinute" value="30" />
    <!-- Rate limiting: max ScanAttendance requests per IP per window -->
    <add key="Kiosk:ScanAttendanceMaxPerMinute" value="10" />
    <!-- ============================================ -->
    <!-- VISITOR SETTINGS                             -->
    <!-- ============================================ -->
    <add key="Visitors:MaxRecords" value="10000" />
    <add key="Visitors:RetentionYears" value="2" />
    <!-- ============================================ -->
    <!-- ATTENDANCE REPORT SETTINGS                   -->
    <!-- ============================================ -->
    <add key="Attendance:WorkStart" value="08:00" />
    <add key="Attendance:WorkEnd" value="17:00" />
    <add key="Attendance:GraceMinutes" value="10" />
    <add key="Attendance:FullDayHours" value="8" />
    <add key="Attendance:HalfDayHours" value="4" />
    <add key="Attendance:LunchMinutes" value="60" />
    <add key="Attendance:LunchDeductAfterHours" value="5.5" />
  </appSettings>
  <!-- ============================================ -->
  <!-- MACHINE KEY                                   -->
  <!-- ============================================ -->
  <!--
    P4-F1 ACTION REQUIRED: Replace the placeholder values below with real generated keys
    BEFORE production deployment. The machine key protects session cookies and the
    one-time unlock cookie (MachineKey.Protect/Unprotect). A shared/default key allows
    session forgery.

    Generate keys with PowerShell on the production server:
      $bytes = New-Object byte[] 64
      [Security.Cryptography.RandomNumberGenerator]::Create().GetBytes($bytes)
      $validationKey = [BitConverter]::ToString($bytes) -replace '-',''

      $bytes = New-Object byte[] 32
      [Security.Cryptography.RandomNumberGenerator]::Create().GetBytes($bytes)
      $decryptionKey = [BitConverter]::ToString($bytes) -replace '-',''

    Then replace the placeholder values below.

    For multi-server deployments, the SAME key must be on ALL servers.
    Store the keys in a secrets manager, not in source control.
  -->
  <system.web>
    <!--
      P4-F1: debug="false" — never ship with debug="true".
      With debug enabled, ASP.NET sends full stack traces to browsers,
      compilation is slower, and request timeouts are disabled.
      Web.Release.config transforms this automatically on publish.
    -->
    <compilation debug="false" targetFramework="4.8" />
    <httpRuntime targetFramework="4.8" maxRequestLength="10240" />
    <!--
      P4-F1: machineKey — INSERT YOUR GENERATED VALUES HERE.
      See the comment block above for the PowerShell generation command.
      Replace PLACEHOLDER_VALIDATION_KEY_64_BYTES_HEX and
      PLACEHOLDER_DECRYPTION_KEY_32_BYTES_HEX with real values.
    -->
    <machineKey validationKey="AutoGenerate,IsolateApps" decryptionKey="AutoGenerate,IsolateApps" validation="HMACSHA256" decryption="AES" />
    <!--
      P4-F1: customErrors mode="On" — all users see Error.cshtml in production.
      RemoteOnly still exposes stack traces to localhost; On is the correct
      production setting to prevent information disclosure.
      Web.Release.config transforms this automatically on publish.
    -->
    <customErrors mode="Off" defaultRedirect="~/Views/Shared/Error.cshtml">
      <error statusCode="403" redirect="~/Views/Shared/Error.cshtml" />
      <error statusCode="404" redirect="~/Views/Shared/Error.cshtml" />
    </customErrors>
    <!--
      Session state.
      InProc is acceptable for a single-server kiosk deployment.
      For multi-server or if sessions must survive app pool recycles, use:
        <sessionState mode="StateServer"
                      stateConnectionString="tcpip=127.0.0.1:42424"
                      timeout="30" />
      or SQL Server session state (aspnet_regsql.exe).
    -->
    <sessionState mode="InProc" timeout="30" />
    <httpModules />
  </system.web>
  <!-- ============================================ -->
