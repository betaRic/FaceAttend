  <!-- ============================================ -->
  <!-- WEB SERVER (IIS)                             -->
  <!-- ============================================ -->
  <system.webServer>
    <!-- File Upload Size Limits -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="10485760" />
      </requestFiltering>
    </security>
    <!--
      P4-F1: HTTPS redirect — uncommented for production.
      Requires IIS URL Rewrite module and a valid SSL certificate.
      After enabling, set Security:HstsEnabled=true in appSettings above.
    -->
    <rewrite>
      <rules>
        <rule name="HTTP to HTTPS redirect" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
    <!--
      P4-F1: Security headers at the IIS level.
      These complement the SecurityHeadersAttribute applied in code.
      Requires IIS URL Rewrite module or the IIS HTTP Response Headers feature.
    -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
        <!--
          Strict-Transport-Security is set here as a fallback.
          The SecurityHeadersAttribute in code also sets it when Security:HstsEnabled=true.
          Only effective once HTTPS redirect above is active.
        -->
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains" />
      </customHeaders>
    </httpProtocol>
	  <staticContent>
